                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validationMessage" />

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/nintendo" />

                <TextView
                    style="@style/QuestionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_1" />

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q1_alt_a"
                    style="@style/QuestionAlternatives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q1_alt_a" />

                <RadioButton
                    android:id="@+id/q1_alt_b"
                    style="@style/QuestionAlternatives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q1_alt_b" />

